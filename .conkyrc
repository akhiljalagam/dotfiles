conky.config = {
    alignment = 'top_right',
    background = false,
    border_width = 0,
    border_inner_margin = 8,
    cpu_avg_samples = 2,
    default_color = '#eeeeee',
    color1 = 'e0ffff',
    color2 = '7affff',
    default_outline_color = 'white',
    default_shade_color = '#999999',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    font = 'Liberation Mono:size=9',
    gap_x = -1665,
    gap_y = 15,
    minimum_height = 400,
    minimum_width = 200,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    out_to_x = true,
    own_window = true,
    own_window_colour = '#111111',
    own_window_transparent = false,
    own_window_argb_visual = true,
    own_window_argb_value = 128,
    own_window_class = 'Conky',
    own_window_type = 'normal',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 1,
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,
}

conky.text = [[
# ---
# Font used for the clock ---> CP Mono <--- https://github.com/chrissimpkins/codeface/tree/master/fonts/cp-mono
# ---
${alignc}${color 7affff}${font CPMono_v07:pixelsize=35}${time %H:%M}
${font Liberation Mono:pixelsize=12}${color grey}Date$alignr$color ${time %a, %d-%m-%Y}

${font Liberation Mono:pixelsize=12}${color grey}Kernel$alignr${color 7affff} $kernel
${color grey}Uptime$alignr$color $uptime

${color grey}RAM: $color$mem/$memmax${alignr}$memperc%
${membar 6, 215}

${color grey}CPU${alignr}$color ${execi 1000 cat /proc/cpuinfo | grep 'model name' | sed -e 's/model name.*: //'| uniq | cut -c 1-25}
${color grey}Usage${alignr}$color $cpu%
${color grey}Frequency${alignr}$color $freq MHz
${color grey}Temperature${alignr}$color ${exec sensors | grep 'Package id' | awk '{print $4}' | cut -c 2-3}°C

# ------------------------------------------------------------------------------
# Gets the name and temperature of an NVIDIA card, requires proprietary drivers
# ------------------------------------------------------------------------------
${color grey}GPU${alignr}${color}${execi 1000 nvidia-smi --query-gpu=gpu_name --format=csv,noheader | cut -c 15-30}
${color grey}NVIDIA Temp${alignr}${color}${execi 60 nvidia-settings -query [gpu:0]/GPUCoreTemp -t}°C
# ----
# AMD
# ----
# Nothing over here yet.

/ ${alignr}$color${fs_used /}/${fs_size /}
/home ${alignr}$color${fs_used /home}/${fs_size /home}
${color 7affff}/swap${alignr}${color 7affff} $swap/$swapmax

${color grey}Down: ${downspeed enp2s0}${alignr}${color grey}Up: ${upspeed enp2s0}
${downspeedgraph enp2s0 20,105 7affff 2D9AC9} $alignr${upspeedgraph enp2s0 20,105 7affff 2D9AC9}

${color white}Name${alignr}CPU%   MEM%
${color lightgrey}${top name 1}${alignr}${top cpu 1} ${top mem 1}
${color lightgrey}${top name 2}${alignr}${top cpu 2} ${top mem 2}
${color lightgrey}${top name 3}${alignr}${top cpu 3} ${top mem 3}
${color lightgrey}${top name 4}${alignr}${top cpu 4} ${top mem 4}
${color lightgrey}${top name 5}${alignr}${top cpu 5} ${top mem 5}

${color white}Weather report: ${color 7affff}${execi 420 curl https://wttr.in/\?0Tq}
]];
